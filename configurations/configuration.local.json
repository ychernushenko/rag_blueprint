{
    "metadata": {
        "log_level": "info"
    },
    "pipeline": {
        "embedding": {
            "datasources": [
                {
                    "name": "pdf",
                    "export_limit": 10,
                    "base_path": "data/bavarian_beer"
                }
            ],
            "embedding_model": {
                "provider": "hugging_face",
                "name": "BAAI/bge-small-en-v1.5",
                "tokenizer_name": "BAAI/bge-small-en-v1.5",
                "splitting": {
                    "name": "basic",
                    "chunk_overlap_in_tokens": 50,
                    "chunk_size_in_tokens": 384
                }
            },
            "vector_store": {
                "name": "qdrant",
                "collection_name": "collection-local",
                "host": "127.0.0.1",
                "protocol": "http",
                "ports": {
                    "rest": 6333
                }
            }
        },
        "augmentation": {
            "query_engine": {
                "retriever": {
                    "name": "basic",
                    "similarity_top_k": 5
                },
                "synthesizer": {
                    "name": "tree",
                    "llm": {
                        "provider": "openai",
                        "name": "gpt-4o-mini",
                        "max_tokens": 1024,
                        "max_retries": 3,
                        "context_window": 16384
                    }
                },
                "postprocessors": []
            },
            "langfuse": {
                "host": "127.0.0.1",
                "protocol": "http",
                "port": 3000,
                "database": {
                    "host": "127.0.0.1",
                    "port": 5432,
                    "db": "langfuse"
                }
            },
            "chainlit": {
                "port": 8000
            }
        },
        "evaluation": {
            "judge_llm": {
                "provider": "openai",
                "name": "gpt-4o-mini",
                "max_tokens": 1024,
                "max_retries": 3,
                "context_window": 16384
            },
            "judge_embedding_model": {
                "provider": "hugging_face",
                "name": "BAAI/bge-small-en-v1.5",
                "tokenizer_name": "BAAI/bge-small-en-v1.5"
            }
        }
    }
}
